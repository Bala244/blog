<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<div class="col-6 m-auto mt-5 mb-5">
  <%= column_chart @data, stacked: true %>
</div>

<table id="authors-datatable" class="table overflow-hidden">
  <thead>
    <tr>
      <th>Author name</th>
      <th>Author description</th>
      <th>Articles</th> 
      <th>actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.author_name %></td>
        <td><%= author.author_description %></td>
        <td><%= author.article.count %></td>
        <td id="<%= author.id %>" ><%= link_to 'Show', author %> 
            <%= link_to 'Edit', edit_author_path(author) %> 
            <%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?', remote: true } %>
            <h5 class="destroy">Delete</h5>
            
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path %>

